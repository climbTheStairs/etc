# Only ever modify master copy on arch:!

set autoquit
set dirfirst
set drawbox
set hidden
set incsearch
set nomouse
set noignorecase
set previewer ~/etc/lf/previewer.sh # Cannot use environment variable here!
set ratios 1:2
set scrolloff 999

map b :set drawbox!
map <c-z> $kill -STOP $PPID
map <delete> delete
map <esc> :clear; unselect

